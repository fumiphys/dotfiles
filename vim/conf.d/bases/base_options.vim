" base options

" general
set fenc=utf-8
set nobackup
set noswapfile
set autoread
set hidden
set showcmd

" command line
set wildmenu

" visual
set number
set nowrap
set cursorline
set smartindent
set showmatch
set laststatus=2
set noshowmode

set expandtab
set tabstop=2
set shiftwidth=2

" insert
set backspace=indent,eol,start

" search
set ignorecase
set smartcase
set incsearch
set wrapscan
set hlsearch

" completion
set completeopt-=preview

" yank
set clipboard=unnamed,autoselect
