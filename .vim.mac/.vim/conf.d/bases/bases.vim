" command line
set wildmenu
set wildmode=longest:full,full

" indent
set tabstop=4

" visual
set number
set nowrap
set nofoldenable
set completeopt-=preview
set backspace=indent,eol,start
set showmatch
source $VIMRUNTIME/macros/matchit.vim

" search
set incsearch
set ignorecase
set smartcase
set hlsearch
